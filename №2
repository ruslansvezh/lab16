#include <iostream>
#include <cmath>
using namespace std;
int main()
{
	setlocale(0, "");
	int N;
	cout << "Введите кол-во элементов массива: " << endl;
	cin >> N;
	 int* array = new int [N];
	 cout << "Введите элементы массива: " << endl;
	 for (int i = 0; i < N; i++)
	 {
		 cin >> array[i];
	 }
	 int K = 0, a = 0, b = 0;
	 for (int i = 0; i < N; i++)
	 {
		 K = 0;
		 for (int j = 0; j < N; j++)
		 {
			 if (array[i] == array[j])
			 {
				 K++;
				 if (K == 2)
				 {
					 a = i;
					 b = j;
					 for (int i = b; i < N - 1; i++)
						 array[i] = array[i + 1];
					 for (int i = a; i < N - 1; i++)
						 array[i] = array[i + 1];
					 N--;
				 }
			 }
		 }
	 }
	 cout << "Массив после изменения: " << endl;
	 for (int i = 0; i < N; i++)
	 {
		 cout << array[i] << endl;
	 }
	 cout << "Размер массива после измения: " << endl;
	 cout << N;
	 
}

